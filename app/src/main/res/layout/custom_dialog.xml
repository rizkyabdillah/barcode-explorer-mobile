<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="HASIL SCAN"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/judul_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/judul"
        android:textStyle="bold"
        android:text="Data Barcode"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/dataImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/judul_data"
        android:text="+623512312657"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/judul_kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dataImg"
        android:textStyle="bold"
        android:text="Kode Produk"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/kode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/judul_kode"
        android:text="8998866107143"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/judul_tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/kode"
        android:textStyle="bold"
        android:text="Nama Produk"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/judul_tipe"
        android:text="POSH MEN COOL BLUE 150ML"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nama"
        android:layout_alignParentRight="true">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Close"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

</RelativeLayout>
